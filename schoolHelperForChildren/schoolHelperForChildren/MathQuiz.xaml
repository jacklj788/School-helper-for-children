        <Label x:Name="equalsLbl_Copy" Content="=" HorizontalAlignment="Left" Margin="615,107,0,0" VerticalAlignment="Top" FontSize="30" Height="52"/>
        <Label x:Name="num5Lbl" Content="5" HorizontalAlignment="Left" Margin="490,140,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Label x:Name="num6Lbl" Content="6" HorizontalAlignment="Left" Margin="565,140,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Label x:Name="operator3" Content="+" HorizontalAlignment="Left" Margin="530,138,0,0" VerticalAlignment="Top" FontSize="30" Height="52"/>
        <TextBox x:Name="answer3Txtbox" HorizontalAlignment="Left" Height="38" Margin="651,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="77" Background="Transparent" BorderBrush="Red" FontSize="30"/>
