<UserControl x:Class="schoolHelperForChildren.EnglishQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:schoolHelperForChildren"
             mc:Ignorable="d" 
             d:DesignHeight="608" d:DesignWidth="972">
    <UserControl.Background>
        <ImageBrush ImageSource="Images\schoolDeskEnglish.png" />
    </UserControl.Background>
    <Grid>
        <Label x:Name="qOneLbl" Content="Q1) Should we go play at ___________ house?" HorizontalAlignment="Left" Margin="469,83,0,0" VerticalAlignment="Top" Width="215"/>
        <Button x:Name="qOneAOneWrongBtn" Content="your" HorizontalAlignment="Left" Margin="524,120,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="qOneAOneRightBtn" Content="you're" HorizontalAlignment="Left" Margin="665,120,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="label" Content="Pick an answer to fill in the blanks!" HorizontalAlignment="Left" Margin="570,41,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
